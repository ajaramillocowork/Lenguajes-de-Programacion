#include<stdio.h>

void main() {

 	float num1;
	float num2;
	float num3;
	float num4;
	float promedio;

	printf("Ingrese el numero 1: \n");
	scanf("%f", &num1);
	printf("Ingrese el numero 2: \n");
	scanf("%f", &num2);
	printf("Ingrese el numero 3: \n");
	scanf("%f", &num3);
	printf("Ingrese el numero 4: \n");
	scanf("%f", &num4);
	
	promedio = (num1+num2+num3+num4) / 4;
	
	printf("El promedio es: %f", promedio);

}
