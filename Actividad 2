#include<stdio.h>

void main() {

	int lado1;
	int lado2;
	int perimetro;
	int area;

	printf("Ingrese el lado 1: \n");
	scanf("%d", &lado1);
	printf("Ingrese el lado 2: \n");
	scanf("%d", &lado2);
	
	perimetro = lado1*2 + lado2*2;
	area = lado1 * lado2;
	
	printf("Perimetro: ");
	printf("%d", perimetro);
	printf("\n");
	printf("Area: ");
	printf("%d", area);

}
